{
  "name": "WebChat",
  "version": "1.0.0",
  "scripts": {
    "start": "parcel src/html/index.html",
    "build": "parcel build src/html/index.html --dist-dir dist",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "watch:css": "npx chokidar \"src/**/*.css\" -c \"npm run build\"",
    "watch:js": "npx chokidar \"src/**/*.js\" -c \"npm run build\"",
    "serve": "parcel src/html/index.html"
  },
  "keywords": [
    "chat",
    "web",
    "messaging"
  ],
  "author": "Vadim Nokhrin",
  "license": "ISC",
  "description": "A super cool webchat",
  "dependencies": {
    "@stomp/stompjs": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.0",
    "express": "^4.19.2",
    "jwt-decode": "^4.0.0",
    "lit-html": "^3.2.0",
    "npm-check": "^3.2.10",
    "require": "^0.4.4",
    "sockjs": "^0.3.24",
    "sockjs-client": "^1.6.1",
    "stomp-broker-js": "^1.3.0",
    "stompjs": "^2.3.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.25.4",
    "@babel/preset-env": "^7.25.4",
    "@parcel/transformer-sass": "^2.12.0",
    "babel-loader": "^9.1.3",
    "bootstrap": "^5.3.3",
    "concurrently": "^8.2.2",
    "connect-livereload": "^0.6.1",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "jquery": "^3.7.1",
    "livereload": "^0.9.3",
    "node-sass": "^9.0.0",
    "parcel": "^2.12.0",
    "popper.js": "^1.16.1",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "sass": "^1.32.0",
    "sass-loader": "^16.0.1",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "vm-browserify": "^1.1.2"
  }
}
